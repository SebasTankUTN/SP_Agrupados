from elements import *
from agrupados import *
from funciones_generales import *
import random
from pruebitas import *
elementos_jugados = []
nivel = 1
stage = 1
vidas = 3
reinicios = 3
puntuacion = 0
estado_gamer_over = False

salir=True
while salir:

    matriz_a_jugar = separar_grupos(elementos, elementos_jugados)

    matriz_a_jugar = desordenar_grupos(matriz_a_jugar)
    
    puntuacion_ganado,puntuacion,estado_gamer_over = validacion_stage(elementos, nivel, matriz_a_jugar, reinicios, puntuacion, vidas, estado_gamer_over)
        
    puntuacion_ganado = sumar_puntuacion(nivel,vidas,reinicios)
    puntuacion += puntuacion_ganado
    print(f'Puntuacion Actual: {puntuacion}')
    
    if estado_gamer_over == True:
           print("\nHas Perdido.")
           break
    
    stage += 1
    if stage > 3 :
        stage = 1
        nivel += 1
        vidas = 3

    

    condicional=input("salir: a, sino apreta enter: ")
    if condicional == "a":
        salir = False



        